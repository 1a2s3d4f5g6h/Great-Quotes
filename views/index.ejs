<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Great Quotes App</title>
</head>
<body>
  <div style="background-color: green; padding: 10px;">
    <a href="/">Great Quotes</a> |
    <a href="/all-quotes">All Quotes</a> |
    <a href="/new-quote">New Quotes</a>
  </div>
  <h1>Great Quotes App</h1>
  <div>
    <% if (quotes.length > 0) { %>
      <% quotes.forEach((quote) => { %>
        <div>
          <h3><%= quote.author %></h3>
          <p><%= quote.quote %></p>
          <button>See Quote</button>
        </div>
      <% }); %>
    <% } else { %>
      <p>No quotes to display.</p>
    <% } %>
  </div>
</body>
</html>